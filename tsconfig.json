{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "experimentalDecorators": true, // Enables experimental support for decorators
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts", // Include TypeScript files under src directory
  ],
  "exclude": [
    "node_modules",
    "**/*_pb.js",
    "**/*_pb.d.ts"
  ]
}